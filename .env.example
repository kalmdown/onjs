# .env.example
# Required variables (no defaults)
# ===============================

# OAuth credentials (required if using OAuth authentication)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# API key credentials (required if using API key authentication)
ONSHAPE_ACCESS_KEY=
ONSHAPE_SECRET_KEY=

# Required in production
SESSION_SECRET=

# Optional variables with defaults
# ===============================
# Authentication method: 'oauth' or 'apikey'
ONSHAPE_AUTH_METHOD=oauth

# Server configuration
PORT=3000

# Onshape API configuration
BASE_URL=https://cad.onshape.com/
API_URL=https://cad.onshape.com/api/v10
OAUTH_URL=https://oauth.onshape.com
OAUTH_CALLBACK_URL=http://localhost:3000/oauthRedirect
ONSHAPE_OAUTH_SCOPE=OAuth2ReadPII OAuth2Read OAuth2Write OAuth2Delete

# Session configuration
SESSION_NAME=onshape-session
SESSION_SECURE=false
SESSION_MAX_AGE=86400000

# Measurement system: 'inch' or 'metric'
ONSHAPE_UNIT_SYSTEM=metric

# Webhook configuration (optional)
WEBHOOK_CALLBACK_ROOT_URL=